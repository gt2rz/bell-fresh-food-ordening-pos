---
import { categories } from "@/data/categories.json";
---

<div class="flex gap-6 pt-12 pb-6">
  {
    categories.map((category) => {
      return (
        <div class="min-w-[160px] min-h-[160px] text-yellow-600 flex flex-col justify-between items-center p-4 bg-yellow-100/20 border-2 border-yellow-400 rounded-[44px] cursor-pointer hover:bg-yellow-500 hover:border-orange-500 hover:text-white">
          <img
            src={category.url}
            alt={category.label}
            width={category.width}
            height={category.height}
          />
          <p class="text-center font-bold mt-4 text-gray-800">
            {category.label}
          </p>
        </div>
      );
    })
  }
</div>
