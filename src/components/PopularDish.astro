---
import { popularDishes } from "@/data/popularDishes.json";
---

<div class="py-12">
  <h1>Popular Dish</h1>
  <div class="flex flex-row py-20 gap-6 overflow-x-scroll">
    {
      popularDishes.map((dish) => {
        return (
          <div class="group">
            <div class="relative flex flex-col w-52 h-72 border border-gray-300 shadow-lg rounded-[36px] cursor-pointer group-hover:bg-yellow-500 group-hover:text-white group-hover:border-yellow-600">
              <div class="flex w-full justify-center absolute bottom-52 z-10">
                <img src={dish.image} alt={dish.name} class="w-32 h-32" />
              </div>

              <div class="mt-24 px-4 flex flex-col justify-end">
                <h2 class="font-bold justify-start text-center h-16">
                  {dish.name}
                </h2>

                <div class="flex flex-col justify-end">
                  <div class="py-2 border-gray-300 border-t border-b text-sm mt-4 text-gray-400 font-semiboldc text-center group-hover:text-white">
                    {dish.calories} calories - {dish.persons} persons
                  </div>
                  <div class="flex justify-between mt-4">
                    <h1 class="font-bold text-xl">${dish.price}</h1>
                    <p class="bg-yellow-500 rounded-full w-8 h-8 flex justify-center items-center text-white font-bold group-hover:bg-white group-hover:text-yellow-500">
                      +
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</div>
